<Alloy>
	<Window id="rootWindow">
		<LeftNavButton>
				<Button id="leftNavButton" class="navButton">Cancel</Button>
			</LeftNavButton>
			<RightNavButton>
				<Button id="rightNavButton" class="navButton">Done</Button>
			</RightNavButton>
		<ScrollView id="scrollView">
			<Button id="fbLoginButton"></Button>
			<View class="separatorView">
				<View class="separator" left="0"></View>
				<Label class="separatorLabel">OR</Label>
				<View class="separator" right="0"></View>
			</View>
			<TableView id="fieldsTable">
				<TableViewRow>
					<TextField id="emailField" hintText="Email"></TextField>
				</TableViewRow>
				<TableViewRow>
					<TextField id="passwordField" hintText="Password"></TextField>
					<Button id="forgotPassword"></Button>
				</TableViewRow>
			</TableView>
			<View id="flexSpace" height="50"></View>
		</ScrollView>
		</Window>
</Alloy>