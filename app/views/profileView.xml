<Alloy>
	<View id="rootView" layout="vertical">
		<View width="Ti.UI.FILL" height="40%">
			<View id="backgroundView">
				<ImageView id="backgroundImageView" width="FILL" height="130%" zIndex="1"></ImageView>
			</View>
			<View width="Ti.UI.FILL" height="Ti.UI.FILL" layout="vertical">
				<ImageView id="imageView" width="100" height="100" borderWidth="2" borderRadius="50" borderColor="white" top="30"></ImageView>
				<Label id="nickNameLabel" top="12"></Label>
			</View>
		</View>
		<View class="separator"></View>
		<View class="viewContainer" top="50">
			<View class="separator"></View>
			<View width="FILL" height="SIZE">
				<Label class="button" id="messageButton">Send Message</Label>
			</View>
		</View>
		<View class="viewContainer" top="0">
			<View class="separator"></View>
			<View width="FILL" height="SIZE">
				<Label class="button" id="pokeButton">Poke</Label>
			</View>
		</View>
		<View class="viewContainer" top="0">
			<View class="separator"></View>
			<View width="FILL" height="SIZE">
				<Label class="button" id="blockButton">Block</Label>
			</View>
		</View>
		<View class="separator"></View>
	</View>
</Alloy>